<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">新規会員登録</h4>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer" do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="form-group row">
    <label class="col-3 col-form-label">名前</label>
    <label>(姓)</label>
    <div class="col">
        <%= f.text_field :first_name, placeholder: "令和", class: "form-control" %>
    </div>
    <label>(名)</label>
    <div class="col">
        <%= f.text_field :last_name, placeholder: "道子", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">フリガナ</label>
    <label>(セイ)</label>
    <div class="col">
      <%= f.text_field :first_name_kana, placeholder: "レイワ", class: "form-control" %>
    </div>
    <label>(カナ)</label>
    <div class="col">
      <%= f.text_field :last_name_kana, placeholder: "ミチコ", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
      <label class="col-3 col-form-label">メールアドレス</label>
      <div class="col-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
　    </div>
　</div>
　<div class="form-group row">
      <label class="col-3 col-form-label">郵便番号（ハイフンなし）</label>
      <div class="col-4">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-3 col-form-label">住所</label>
      <div class="col-9">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-3 col-form-label">電話番号（ハイフンなし）</label>
      <div class="col-4">
        <%= f.text_field :telephone_number, placeholder: "00000000000", class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
        <label class="col-3 col-form-label">パスワード<% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
        <% end %></label>
        <div class="col-4">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
  </div>
  <div class="form-group row">
      <label class="col-3 col-form-label">パスワード（確認用）</label>
      <div class="col-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <div class="col-3"></div>
    <div class="col-9">
      <%= f.submit '新規登録', class:'btn btn-success px-4' %>
    </div>
  <% end %>
  </div>
  <div class="row">
    <h4 class="bg-light px-3">既に登録済みの方</h4>
  </div>
  <div class="row">
    <%= link_to "こちら", new_customer_session_path %><p>からログインしてください。</p>
  </div>
</div>