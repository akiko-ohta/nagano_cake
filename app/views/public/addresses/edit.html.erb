<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">配送先編集</h4>
  </div>
  <%= form_with model: @address do |f| %>
  <div class="form-group row">
    <label class="col-3 col-form-label">郵便番号（ハイフンなし）</label>
    <div class="col-4">
      <%= f.text_field :shipping_postal_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">住所</label>
    <div class="col-9">
      <%= f.text_field :shipping_address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">名前</label>
    <div class="col-4 d-inline-block">
      <%= f.text_field :shipping_name, class: "form-control" %>
    </div>
    <div class="col text-right">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>