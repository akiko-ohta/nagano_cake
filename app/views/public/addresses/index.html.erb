<h2>配送先登録/一覧</h2>
<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
<label>郵便番号（ハイフンなし）</label>
<%= f.text_field :shipping_postal_code %>
<label>住所</label>
<%= f.text_field :shipping_address %>
<label>宛名</label>
<%= f.text_field :shipping_name %>
<%= f.submit "新規登録" %>
<% end %>

<% @addresses.each do |address| %>
  <%= address.shipping_postal_code %>
  <%= address.shipping_address %>
  <%= address.shipping_name %>
  <%= link_to edit_address_path(address.id), class: 'btn text-decoration-none text-light btn-success btn-sm' do %>
    <span>編集する</span>
  <% end %>
  <%= link_to address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn text-decoration-none text-light btn-danger btn-sm' do %>
    <span>削除する</span>
  <% end %>
<% end %>