<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">注文情報入力</h4>
  </div>
  <%= form_with model: @order, url: {action: 'confirm'}, method: :post do |f| %>
  <div class="row">
    <p class="mb-0"><strong>支払方法</strong></p>
    <div class="ml-4">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div class="ml-4 mb-3">
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
    </div>
    <p class="mb-0"><strong>お届け先</strong></p>
    <div class="ml-4">
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :select_address_0,"ご自身の住所" %>
    </div>
    <div class="ml-5">
      <%= current_customer.postal_code %>
      <%= current_customer.address %>
    </div>
    <div class="ml-5 mb-3">
      <%= current_customer.first_name %>
      <%= current_customer.last_name %>
    </div>
    <div class="ml-4">
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address_1,"登録済み住所から選択" %>
    </div>
    <div class="ml-5 mb-3">
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
    <div class="ml-4">
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address_2,"新しいお届け先" %>
    </div>
    <div class="form-group row">
      <label class="col-5 col-form-label ml-5">郵便番号（ハイフンなし）</label>
      <div class="col">
        <%= f.text_field :shipping_postal_code, class: "form-control", placeholder: "0000000" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-5 col-form-label ml-5">住所</label>
      <div class="col">
      <%= f.text_field :shipping_address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-5 col-form-label ml-5">宛名</label>
      <div class="col mb-3">
        <%= f.text_field :shipping_name, class: "form-control", placeholder: "令和道子" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>