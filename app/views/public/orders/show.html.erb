<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">注文情報</h4>
  </div>
  <div class="row">
    <div class="col-6">
      <h5 class="mr-4"><strong>注文情報</strong></h5>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <span>〒</span>
              <%= @order.shipping_postal_code %>
              <%= @order.shipping_address %>
              <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-4">
      <h5 class="mr-4"><strong>請求情報</strong></h5>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品合計</th>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><span>800</span></td>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <td><%= @order.amount_bill.to_s(:delimited) %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <h5 class="mr-4"><strong>注文内容</strong></h5>
      <table class="table table-bordered">
        <thead class="thead-light">
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>