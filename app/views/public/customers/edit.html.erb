<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">会員情報編集</h4>
  </div>
  <%= form_with model: @customer, url: {action: 'update'}, method: :patch do |f| %>
  <div class="form-group row">
    <label class="col-3 col-form-label">氏名</label>
      <div class="col">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">フリガナ</label>
      <div class="col">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">郵便番号</label>
      <div class="col-4">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">住所</label>
      <div class="col-9">
        <%= f.text_field :address, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">電話番号</label>
      <div class="col-4">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">メールアドレス</label>
      <div class="col-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col text-center">
      <%= link_to customers_confirm_withdraw_path, class: ' btn btn-danger' do %>
        <span>退会する</span>
      <% end %>
    </div>
  </div>
</div>