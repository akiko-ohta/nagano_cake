<div>
<%= image_tag @item.get_image(100,100) %>
<%= @item.name %>
<%= @item.introduction %>
<p>￥<%= @item.with_tax_price %></p>
<%= form_with model: @cart_item do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..10] %>
  <%= f.submit 'カートに入れる' %>
<% end %>
</div>