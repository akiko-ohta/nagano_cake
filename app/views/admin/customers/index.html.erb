<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">会員一覧</h4>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th scope="col">
            氏名
          </th>
          <th scope="col">
            メールアドレス
         </th>
          <th scope="col">
            ステータス
          </th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <th scope="row"><%= customer.id %></th>
            <td>
              <%= link_to admin_customer_path(customer.id), class: 'text-dark btn-default' do %>
                 <%= customer.first_name %><%= customer.last_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == "有効" %>
                <span class="text-success"><strong><%= customer.is_active %></strong></span>
              <% else %>
                <span class="text-secondary"><strong><%= customer.is_active %></strong></span>
              <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>