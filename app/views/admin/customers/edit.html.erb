<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h4>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">会員ID</label>
    <div class="col-4"><%= @customer.id %></div>
  </div>
  <%= form_with model: [:admin ,@customer] do |f| %>
  <div class="form-group row">
    <label class="col-3 col-form-label">氏名</label>
    <div class="col">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">フリガナ</label>
    <div class="col">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">郵便番号</label>
    <div class="col-4"><%= f.text_field :postal_code, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">住所</label>
    <div class="col-9"><%= f.text_field :address, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">電話番号</label>
    <div class="col-4"><%= f.text_field :telephone_number, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">メールアドレス</label>
    <div class="col-4"><%= f.text_field :email, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">会員ステータス</label>
    <div class="col-4">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "無効" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-4">
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>