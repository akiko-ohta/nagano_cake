<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
  <p>会員ID</p>
  <%= @customer.id %>
<%= form_with model: [:admin ,@customer] do |f| %>
　<p>氏名</p>
    <%= f.text_field :first_name %><%= f.text_field :last_name %>
  <p>フリガナ</p>
  <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
  <p>郵便番号</p>
  <%= f.text_field :postal_code %>
  <p>住所</p>
  <%= f.text_field :address %>
  <p>電話番号</p>
  <%= f.text_field :telephone_number %>
  <p>メールアドレス</p>
  <%= f.text_field :email %>
  <%= f.submit '変更を保存' %>
<% end %>