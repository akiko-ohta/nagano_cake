<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">商品新規登録</h4>
  </div>
  <div class="form-group row">
    <%= form_with model: [:admin ,@item] do |f| %>
  <p>商品画像</p>
  <%= f.file_field :image, accept: "image/*" %>
  <p>商品名</p>
  <%= f.text_field :name %>
  <p>商品説明</p>
  <%= f.text_area :introduction %>
  <p>ジャンル</p>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  <p>税抜き価格</p>
  <%= f.text_field :price %>
  <%= f.submit '新規登録' %>
<% end %>
  </div>
</div>