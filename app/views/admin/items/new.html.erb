<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">商品新規登録</h4>
  </div>
  <%= form_with model: [:admin ,@item] do |f| %>
  <div class="form-group row">
    <label class="col-3 col-form-label">商品画像</label>
    <div class="col-4">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">商品名</label>
    <div class="col-4">
      <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">商品説明</label>
    <div class="col-4">
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control rows-3" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">ジャンル</label>
    <div class="col-4">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class: "custom-select", prompt: "選択してください" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">税抜価格</label>
    <div class="col-4">
        <%= f.text_field :price, placeholder: "1000", class: "form-control" %>
    </div>
    <div class="col">
      <span>円</span>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-4 text-center">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>