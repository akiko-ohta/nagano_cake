<div class="container">
  <div class="row">
    <div class="col-2">
      <h4 class="bg-light text-center px-3 my-3">商品一覧</h4>
    </div>
    <div class="col text-right ">
      <%= link_to new_admin_item_path do %>
        <div class="btn btn-light" style="width: 45px; height: 45px; border-radius: 50%;">
          <p style="font-size: 20px;">+</p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th scope="col">
            商品名
          </th>
          <th scope="col">
            税抜き価格
         </th>
          <th scope="col">
            ジャンル
          </th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <th scope="row"><%= item.id %></th>
            <td>
              <%= link_to admin_item_path(item.id), class: 'text-dark btn-default' do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>