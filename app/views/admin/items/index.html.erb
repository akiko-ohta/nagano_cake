<h2>商品一覧</h2>
<%= link_to new_admin_item_path do %>
  <span>商品追加</span>
<% end %>


  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>商品ID</th>
        <th scope="col">
          商品名
        </th>
        <th scope="col">
          税抜き価格
       </th>
        <th scope="col">
          ジャンル
        </th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <th scope="row"><%= item.id %></th>
          <td>
            <%= link_to admin_item_path(item.id), class: 'text-dark btn-default' do %>
             <%= item.name %>
            <% end %>
            </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>