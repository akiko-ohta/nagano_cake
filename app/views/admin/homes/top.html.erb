<div class="container">
  <div class="row">
    <h4 class="bg-light px-3 my-3">注文履歴一覧</h4>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id), class: 'text-dark  btn-default' do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
          <td>
            <%= order.order_details.inject(0) { |sum, order_detail| sum + order_detail.amount} %>
          </td>
        </tr>
        <% end %>
      </thead>
    </table>
  </div>
  <div class="row">
    <%= paginate @orders %>
  </div>
</div>